<body>
    <div class="editor-container">
        <div class="toolbar">
            <button onclick="formatText('bold')" title="Жирный">
                <i class="fas fa-bold"></i>
            </button>
            <button onclick="formatText('italic')" title="Курсив">
                <i class="fas fa-italic"></i>
            </button>
            <button onclick="formatText('underline')" title="Подчеркивание">
                <i class="fas fa-underline"></i>
            </button>
            <select id="fontName" onchange="formatText('fontName', this.value)">
                <option value="Arial">Arial</option>
                <option value="Times New Roman">Times New Roman</option>
                <option value="Courier New">Courier New</option>
            </select>
            <select id="fontSize" onchange="formatText('fontSize', this.value)">
                <option value="1">Маленький</option>
                <option value="3" selected>Обычный</option>
                <option value="5">Большой</option>
            </select>
            <button onclick="formatText('justifyLeft')" title="Выравнивание по левому краю">
                <i class="fas fa-align-left"></i>
            </button>
            <button onclick="formatText('justifyCenter')" title="Выравнивание по центру">
                <i class="fas fa-align-center"></i>
            </button>
            <button onclick="formatText('insertUnorderedList')" title="Маркированный список">
                <i class="fas fa-list-ul"></i>
            </button>
            <button onclick="formatText('undo')" title="Отменить">
                <i class="fas fa-undo"></i>
            </button>
            <button onclick="formatText('redo')" title="Повторить">
                <i class="fas fa-redo"></i>
            </button>
        </div>
        <div class="editor-content" contenteditable="true"></div>
        <div class="word-count">Слов: <span id="wordCount">0</span></div>
    </div>

    <script>
        function formatText(command, value = null) {
            document.execCommand(command, false, value);
            updateWordCount();
            addButtonAnimation(event.target);
        }

        function updateWordCount() {
            const text = document.querySelector('.editor-content').innerText;
            const words = text.trim().split(/\s+/).filter(word => word.length > 0);
            document.getElementById('wordCount').textContent = words.length;
        }

        function addButtonAnimation(button) {
            button.classList.add('click-animation');
            setTimeout(() => {
                button.classList.remove('click-animation');
            }, 300);
        }

        // Обновление счетчика при вводе
        document.querySelector('.editor-content').addEventListener('input', updateWordCount);

        // Инициализация
        document.querySelector('.editor-content').focus();
    </script>
</body>
</html>
